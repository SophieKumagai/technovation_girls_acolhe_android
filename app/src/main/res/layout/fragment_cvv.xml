<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.acolhe.app.fragments.Cvv">

    <!-- Título "Busque Ajuda!" -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/paytone_one"
                android:text="BUSQUE AJUDA!"
                android:textColor="#004C6D"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/paytone_one"
                android:text="Depressão não é brincadeira! Não está se sentindo em si? Busque ajuda!"
                android:textColor="@color/background_colorInicial"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/paytone_one"
                android:gravity="center_vertical|end"
                android:text="Ou mande uma mensagem!"
                android:textColor="@color/header_color"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/borda_cvv"
                android:fontFamily="@font/paytone_one"
                android:text="Chat com o CVV"
                android:textColor="@color/primary_color"
                android:textSize="28sp"
                app:backgroundTint="@color/primary_color" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/paytone_one"
                android:gravity="center_horizontal|fill_horizontal|center_vertical"
                android:text="Faça uma ligação!"
                android:textColor="@color/header_color"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bordaarredondadabotao"
                android:fontFamily="@font/paytone_one"
                android:onClick="ligarParaCvv"
                android:text="Ligar para o CVV"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                app:backgroundTint="@color/primary_color" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:src="@drawable/urso" />

        </LinearLayout>
    </ScrollView>

    <!-- Título "Faça uma ligação!" -->

    <!-- Título "Ou mande uma mensagem!" -->

</LinearLayout>
