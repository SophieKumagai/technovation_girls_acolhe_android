<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.acolhe.app.fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:backgroundTint="@color/secondary_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="27dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/paytone_one"
                        android:text="Frase do dia"
                        android:textColor="@color/secondary_color"
                        android:textFontWeight="900"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:src="@drawable/up_aspas" />


                    <TextView
                        android:id="@+id/frase_diaria"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/paytone_one"
                        android:text="Frase bonita estÃ¡ sendo escrita, seja feliz!"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_color"
                        android:textFontWeight="900"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:src="@drawable/down_aspas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="27dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paytone_one"
                            android:text="Seu Humor"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtVwVerTudoHumor_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Ver tudo"
                            android:textAlignment="textEnd"
                            android:textColor="#B3004C6D"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/imgVwVerTudoHumor_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/setaclara" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/historicoHumor_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordaarredondadahome"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/bordaarredondadacinza"
                            android:orientation="vertical"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="6dp">

                            <TextView
                                android:id="@+id/mesHumor_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/paytone_one"
                                android:text="SEP"
                                android:textAlignment="center"
                                android:textColor="#B9B6B2"
                                android:textFontWeight="900"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/diaHumor_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/paytone_one"
                                android:text="11"
                                android:textAlignment="center"
                                android:textColor="#5E4635"
                                android:textFontWeight="900"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/humorDiario_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/paytone_one"
                            android:text="{{Humor do dia}}"
                            android:textColor="#5E4635"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/carinhaHumor_home"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/big_smiley" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="27dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paytone_one"
                            android:text="Clinicas"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtVwVerTudo_clinicas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Ver tudo"
                            android:textAlignment="textEnd"
                            android:textColor="#B3004C6D"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/imageVerTudo_clinicas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/setaclara" />
                    </LinearLayout>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/home_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:cardSlider_otherPagesWidth="50dp"
                        app:cardSlider_pageMargin="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paytone_one"
                            android:text="MeditaÃ§Ãµes"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtVwVerTudo_meditacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Ver tudo"
                            android:textAlignment="textEnd"
                            android:textColor="#B3004C6D"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/imageViewVerTudo_meditacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/setaclara" />
                    </LinearLayout>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/home_viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardSlider_otherPagesWidth="50dp"
                        app:cardSlider_pageMargin="0dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
