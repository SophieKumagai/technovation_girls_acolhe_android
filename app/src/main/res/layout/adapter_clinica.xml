<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:background="@drawable/bordaarredondadaclinica"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bordaarredondadaclinica"
            android:minHeight="140dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                android:layout_weight="2"
                android:backgroundTint="@color/medium_blue"
                android:layout_marginRight="15dp"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/imgVwHomeClinica"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/imagemclinicadefault"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVwNmClinica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="2dp"
                        android:text="@string/nomeClinica"
                        android:textColor="@color/text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ImgVwInformacao"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/iconeinformacao" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtVwLocalClinica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/localClinica"
                    android:textColor="@color/text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgVwEstrela1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:src="@drawable/estrelavazia" />

                    <ImageView
                        android:id="@+id/imgVwEstrela2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:src="@drawable/estrelavazia" />

                    <ImageView
                        android:id="@+id/imgVwEstrela3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:src="@drawable/estrelavazia" />

                    <ImageView
                        android:id="@+id/imgVwEstrela4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:src="@drawable/estrelavazia" />

                    <ImageView
                        android:id="@+id/imgVwEstrela5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:src="@drawable/estrelavazia" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrLytInformacaoExtra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordaarredondadainformacoesadicionaisclinica"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/txtVwDescricao"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordaarredondadatopicosconteudoclinicas"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/tituloDescricaoClinicas"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/txtVwDescricaoClinicas"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:text="@string/conteudoDescricaoClinicas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVwContatos"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bordaarredondadatopicosconteudoclinicas"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="@string/tituloContatoClinicas"
                        android:textColor="@color/text_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/txtVwTelefoneClinica"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="@string/telefone"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtVwNumeroTelefone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/telefoneDefault"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/txtVwEmailClinica"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="@string/email"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtVwEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/emailDefault"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>