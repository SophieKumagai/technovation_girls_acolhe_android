<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.acolhe.app.MeditacaoHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:onClick="sair"
                    android:src="@drawable/setapreta" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/paytone_one"
                    android:text="Meditações"
                    android:textColor="@color/secondary_color"
                    android:textFontWeight="900"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="34dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/paytone_one"
                            android:text="Rápido e Fácil"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="18dp" />
                        <LinearLayout
                            android:id="@+id/verTodasLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/paytone_one"
                                android:text="Ver todas"
                                android:textAlignment="textEnd"
                                android:textColor="#B3004C6D"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="0"
                                android:src="@drawable/lock" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:cardSlider_otherPagesWidth="50dp"
                        app:cardSlider_pageMargin="0dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="?android:attr/listDivider" />

                <Button
                    android:id="@+id/desbloquearAcolhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="14dp"
                    android:backgroundTint="@color/secondary_color"
                    android:fontFamily="@font/paytone_one"
                    android:padding="15dp"
                    android:text="Desbloquear acolhe +"
                    android:textFontWeight="900"
                    app:cornerRadius="10dp" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="34dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/paytone_one"
                            android:text="Dormir melhor"
                            android:textColor="@color/secondary_color"
                            android:textFontWeight="900"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:id="@+id/verTodasLock2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/paytone_one"
                                android:text="Ver todas"
                                android:textAlignment="textEnd"
                                android:textColor="#B3004C6D"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:src="@drawable/lock" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:id="@+id/viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:cardSlider_otherPagesWidth="50dp"
                        app:cardSlider_pageMargin="0dp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bigLockClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="14dp"
                        android:background="?android:attr/listDivider" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:layout_weight="0"
                        android:src="@drawable/lock_bigger" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="301dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/paytone_one"
                        android:text="Assine o Acolhe + para ter acesso a mais conteúdos!"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_color"
                        android:textFontWeight="900"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>